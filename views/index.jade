extend layout
block content
  div.errors
    if errors
      ul
        each error in errors
          li= error
  article
    h2 #{data['dtx:parkingName']}
    p #{data['dtx:parkingSiteAddress']}
    p #{data['dtx:parkingLocation']}
    p #{data['dtx:contactDetailsTelephoneNumber']}
    a(href="http://www.google.com/maps/place/"+data['dtx:latitude']+","+data['dtx:longitude'])
      img(class="map" src="https://maps.googleapis.com/maps/api/staticmap?center=Ghent,Belgium&zoom=13&size=400x200&maptype=roadmap&markers=color:red|"+data['dtx:latitude']+","+data['dtx:longitude']+"&key=AIzaSyA8Tawxe7x2cpGiTpvOh35xHe8dUZsjsFg" alt="Parking Name")

    div
      div
      .meter(data-max=parking.totalCapacity data-value=parking.totalCapacity-parking.parkingStatus.availableCapacity)
      div.spotsOpen
        span.number #{freeSpace}
        p VRIJE
        p.spots PLAATSEN

      script(type="application/ld+json")
        |!{JSON.stringify(data)}

